@model Hangman.Web.Models.StatisticsPlayGameModel

<table border="1">
    <tr>
        <th>Won</th>
        <th>Lost</th>
        <th>LettersGussed</th>
        <th>WordsGussed</th>
    </tr>
    <tr>
        <td>@Model.UserScore.Won</td>
        <td>@Model.UserScore.Lost</td>
        <td>@Model.UserScore.LettersGussed</td>
        <td>@Model.UserScore.WordsGussed</td>
    </tr>
</table>
<br />
<br />
@using (Ajax.BeginForm("Guess", null,
                            new AjaxOptions
                            {
                                UpdateTargetId = "word-container",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "POST"
                            }, new { id = "searchForm" }))
{
    <input type="text" name="query" />
    <input type="submit" />
}

<div id="word-container">
    @Html.Partial("_GameVisualization", Model.GamePlayState)
</div>